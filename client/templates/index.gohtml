<!doctype html>
<html>
<head>
    <title>Orbitel SIP Phone</title>
    <meta charset="UTF-8">
    {{ if .XErrorMessage }}
    <meta name="x-error-message" content="{{ .XErrorMessage }}"/>
    {{ end }}
    <script defer type="text/javascript">
      let apiUri = "";
      let baseUri = "";
      let wsUri = "";
      {{ if .API_URI }}
      apiUri = {{ .API_URI }};
      {{ end }}
      {{ if .WS_URI }}
      wsUri = {{ .WS_URI }};
      {{ end }}
      document.addEventListener('DOMContentLoaded', () => {
        if (typeof SkyStreamer === 'undefined') {
          if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations()
              .then(function (rs) {
                for (let r of rs) {
                  r.unregister();
                }
              });
            window.setTimeout(() => {
              location.reload();
            }, 5000);
          } else {
            window.setTimeout(() => {
              location.reload();
            }, 5000);
          }
        } else {
          SkyStreamer.default({}, {
            apiUri,
            baseUri,
            wsUri,
          });
        }
      });
    </script>
    <style>
        #loader, #loader:before {
            border: 3px solid transparent
        }

        #loader, #loader-wrapper p {
            position: relative;
            top: 50%
        }

        #loader:after, #loader:before {
            content: "";
            position: absolute
        }

        #loader-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1000
        }

        #loader-wrapper p {
            margin-top: -80px;
            text-align: center
        }

        #loader {
            animation: spin 2s linear infinite;
            border-top-color: #3498db;
            border-radius: 50%;
            display: block;
            left: 50%;
            width: 150px;
            height: 150px;
            margin: -75px 0 0 -75px;
            z-index: 1500
        }

        #loader:before {
            animation: reverse-spin 4s linear infinite;
            border-top-color: #e74c3c;
            border-radius: 50%;
            top: 5px;
            left: 5px;
            right: 5px;
            bottom: 5px
        }

        #loader:after {
            animation: spin 3s linear infinite;
            border: 3px solid transparent;
            border-top-color: #f9c922;
            border-radius: 50%;
            top: 15px;
            left: 15px;
            right: 15px;
            bottom: 15px
        }

        @keyframes spin {
            0% {
                transform: rotate(0)
            }
            100% {
                transform: rotate(360deg)
            }
        }

        @keyframes reverse-spin {
            0% {
                transform: rotate(0)
            }
            100% {
                transform: rotate(-1800deg)
            }
        }
    </style>
</head>
<body>
<noscript>
    <p>
        Javascript is not available, this web application depends upon javascript.
        It will not load unless you enable it within your browser settings.
        If your browser does not support javascript please use one that does.
        E.g. Google Chrome, Mozilla Firefox, Microsoft Edge, Apple Safari, Opera.
        Older or outdated browsers may also not function correctly.
    </p>
</noscript>
<div class="container" id="webapp">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <p>Loading</p>
    </div>
</div>
</body>
</html>
