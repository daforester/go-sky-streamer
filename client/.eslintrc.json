{
    "env": {
        "browser": true
    },
    "extends": [
        "airbnb-base",
        "plugin:vue/recommended"
    ],
    "rules": {
        "func-names": 0,
        "import/no-extraneous-dependencies": 0,
        "no-param-reassign": [2, {
            "props": false
        }],
        "linebreak-style": 0,
        "space-before-function-paren": ["error", "never"],
        "vue/max-attributes-per-line": ["error", {
            "singleline": 3,
            "multiline": {
                "max": 1,
                "allowFirstLine": true
            }
        }]
    },
    "parserOptions": {
        "parser": "@babel/eslint-parser",
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    }
}